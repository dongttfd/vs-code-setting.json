{
    "scssFormatter.tabWidth": 4,
    "editor.minimap.enabled": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": true,
        "suppressLineUncommittedWarning": true
    },
    "blade.format.enable": true,
    "vetur.format.options.tabSize": 4,
    // "breadcrumbs.enabled": true,
    // "breadcrumbs.filePath": "on",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "wrap_attributes": "auto",
            "wrap_line_length": 120
        },
        "prettyhtml": {
            "printWidth": 160,
            "singleQuote": false,
            "wrapAttributes": false,
            "sortAttributes": false
        },
        "prettier": {
            "singleQuote": true,
            "trailingComma": "all"
        }
    },
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.validation.template": false,
    "editor.formatOnPaste": false,
    "[php]": {
        "editor.defaultFormatter": "kokororin.vscode-phpfmt"
    },
    "php.validate.run": "onType",
    "php.validate.executablePath": "/usr/local/opt/php@7.4/bin/php",
    "php.validate.enable": false,
    "emmet.excludeLanguages": [
        "markdown",
        "php"
    ],
    "phpfmt.passes": [
        "IndentTernaryConditions",
        // "StripExtraCommaInArray",
        "SpaceBetweenMethods",
        "PSR2EmptyFunction",
        "OrderAndRemoveUseClauses",
        "NewLineBeforeReturn",
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "dart.previewHotReloadOnSaveWatcher": true,
    "dart.flutterHotRestartOnSave": false,
    "dart.showInspectorNotificationsForWidgetErrors": false,
    "liveshare.publishWorkspaceInfo": true,
    "liveshare.featureSet": "insiders",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "*.log": "default"
    },
    "dart.debugExternalLibraries": true,
    "dart.debugSdkLibraries": true,
    "angular.experimental-ivy": true,
    "namespaceResolver.sortNatural": true,
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "'FiraCode-Retina', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 13,
    "diffEditor.renderSideBySide": false,
    "scssFormatter.singleQuote": true,
    "local-history.dateLocale": "vi",
    "local-history.exclude": [
        "**/.history/**",
        "**/.vscode/**",
        "**/node_modules/**",
        "**/vendor/**",
        "**/typings/**",
        "**/out/**",
        "**/Code/User/**",
        "**/public/hot**",
        "**/public/storage**",
        "**/public/assets/admin/js/***",
        "**/public/assets/admin/css/***",
        "**/public/mix-manifest.json",
        "**/public/assets/web**",
        "**/public/fonts**",
        "**/public/docs**",
        "**/public/vendor/scribe**",
        "**/public/vendor/ckeditor**",
        "**/public/firebase-messaging-sw.js",
        "**/resources/docs**",
        "**/resources/views/scribe**",
        "**/storage/firebase/**",
        "**/storage/*.key**",
        "**/storage/debugbar/**",
        "**/vendor**",
        "**.env**",
        "**.env.backup**",
        "**.phpunit.result.cache**",
        "**docker-compose.override.yml",
        "**Homestead.json",
        "**Homestead.yaml",
        "**npm-debug.log",
        "**yarn-error.log",
        "**_ide_helper.p",
        "***.DS_Store",
        "**.editorconfig",
        "**.idea",
        "**.scannerwork",
        "**.scribe*"
    ],
}
